Ext.define("User",
{
  extend : "Ext.data.Model",
  requires : [ "Ext.data.proxy.Direct", "Ext.data.validator.Email", "Ext.data.validator.Length", "Ext.data.validator.Presence" ],
  fields : [ "id", {
    name : "email",
    type : "string",
    validators : [ {
      type : "presence"
    }, {
      type : "email"
    }, {
      type : "length",
      min : 0,
      max : 128
    } ]
  } ],
  proxy : {
    type : "direct",
    writer: {
        writeAllFields: true,
        allDataOptions: {
            associated: true,
            persist: true            
        },        
        partialDataOptions: {
            associated: true,
            changes: true           
        }
    }
  }
});
